{
  "_comment": "Copy the Email section to your appsettings.json and configure with your SMTP provider",

  "Email_Gmail_Example": {
    "Enabled": true,
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "UseSsl": true,
    "FromAddress": "your-email@gmail.com",
    "FromName": "Market Brief",
    "Recipients": [
      "recipient1@example.com",
      "recipient2@example.com"
    ],
    "_note": "For Gmail, you need to use an App Password. Go to Google Account > Security > 2-Step Verification > App Passwords"
  },

  "Email_Outlook_Example": {
    "Enabled": true,
    "SmtpHost": "smtp.office365.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@outlook.com",
    "SmtpPassword": "your-password",
    "UseSsl": true,
    "FromAddress": "your-email@outlook.com",
    "FromName": "Market Brief",
    "Recipients": [
      "recipient1@example.com"
    ]
  },

  "Email_SendGrid_Example": {
    "Enabled": true,
    "SmtpHost": "smtp.sendgrid.net",
    "SmtpPort": 587,
    "SmtpUsername": "apikey",
    "SmtpPassword": "your-sendgrid-api-key",
    "UseSsl": true,
    "FromAddress": "noreply@yourdomain.com",
    "FromName": "Market Brief",
    "Recipients": [
      "team@example.com"
    ],
    "_note": "SendGrid uses 'apikey' as username and your API key as password"
  },

  "Email_AWS_SES_Example": {
    "Enabled": true,
    "SmtpHost": "email-smtp.us-east-1.amazonaws.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-ses-smtp-username",
    "SmtpPassword": "your-ses-smtp-password",
    "UseSsl": true,
    "FromAddress": "noreply@your-verified-domain.com",
    "FromName": "Market Brief",
    "Recipients": [
      "team@example.com"
    ],
    "_note": "AWS SES requires domain verification and SMTP credentials from IAM"
  },

  "Email_Mailgun_Example": {
    "Enabled": true,
    "SmtpHost": "smtp.mailgun.org",
    "SmtpPort": 587,
    "SmtpUsername": "postmaster@your-domain.mailgun.org",
    "SmtpPassword": "your-mailgun-smtp-password",
    "UseSsl": true,
    "FromAddress": "noreply@your-domain.mailgun.org",
    "FromName": "Market Brief",
    "Recipients": [
      "team@example.com"
    ]
  }
}
