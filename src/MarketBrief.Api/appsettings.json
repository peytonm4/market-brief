{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=marketbrief;Username=postgres;Password=postgres"
  },
  "MarketDataApi": {
    "BaseUrl": "https://api.example.com"
  },
  "Storage": {
    "PdfPath": "pdfs"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000"
    ]
  },
  "Email": {
    "Enabled": false,
    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "UseSsl": true,
    "FromAddress": "",
    "FromName": "Market Brief",
    "Recipients": []
  },
  "Gdelt": {
    "Enabled": true,
    "MaxRecordsPerQuery": 250,
    "DelayBetweenRequestsMs": 500,
    "RequestTimeoutSeconds": 30,
    "MaxStories": 10,
    "MinArticlesPerCluster": 2,
    "SimilarityThreshold": 0.7,
    "Weights": {
      "Impact": 0.45,
      "Pickup": 0.30,
      "Recency": 0.15,
      "Relevance": 0.10
    },
    "Buckets": [
      {
        "Name": "macro_rates",
        "Query": "(CPI OR inflation OR \"jobs report\" OR \"Fed chair\" OR FOMC OR \"rate cut\" OR \"rate hike\")",
        "DisplayName": "Macro/Rates"
      },
      {
        "Name": "risk_volatility",
        "Query": "(\"credit spread\" OR VIX OR \"risk-off\" OR \"flight to quality\")",
        "DisplayName": "Risk/Volatility"
      },
      {
        "Name": "oil_energy",
        "Query": "(WTI OR Brent OR OPEC OR \"oil price\")",
        "DisplayName": "Oil/Energy"
      },
      {
        "Name": "megacap_ai",
        "Query": "(Nvidia OR NVDA OR \"AI chips\" OR \"data center spending\")",
        "DisplayName": "Mega-cap/AI"
      },
      {
        "Name": "banks_credit",
        "Query": "(JPM OR \"bank earnings\" OR \"loan losses\")",
        "DisplayName": "Banks/Credit"
      },
      {
        "Name": "crypto",
        "Query": "(bitcoin OR BTC OR \"ETF inflows\" OR \"SEC crypto\")",
        "DisplayName": "Crypto"
      }
    ]
  }
}
